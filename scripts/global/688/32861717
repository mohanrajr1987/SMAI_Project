]);         $stmt-&gt;bindParam(':DAddressL2', $_SESSION['DAddressL2']);         $stmt-&gt;bindParam(':DTown', $_SESSION['DTown']);         $stmt-&gt;bindParam(':DCounty', $_SESSION['DCounty']);         $stmt-&gt;bindParam(':DPostCode', $_SESSION['DPostCode']);         $stmt-&gt;bindParam(':status', $status);         $stmt-&gt;execute();         $_SESSION['VendorTxCode'] = $conn-&gt;lastInsertId();         // $_SESSION['VendorTxCode'] = 90;          $conn = null;         header ("location:PurchaseSage.php");                }      catch(PDOException $e) {         echo "Error: " . $e-&gt;getMessage();     }      $conn = null; ?&gt; </code></pre>