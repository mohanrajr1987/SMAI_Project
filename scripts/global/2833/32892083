droppableOffset.top);             new_field.css('left', ui.position.left - droppableOffset.left);              // Set Draggable Options             new_field.draggable({                 containment: droppable_page,                 stop: function(event, ui) {                     // Save position after dragging stops                     $(this).data("x_cord", ui.position.left);                     $(this).data("y_cord", ui.position.top);                     $(this).draggable( "disable" );                 }             });              // Add to drop area             $(this).append(new_field);         }     });      $( "#testme" ).click(function() {         $('#placeme').simulate("drag", {             dragTarget: $("#page1")         });         console.log("Simulate Attempted");     }); }); </code></pre>