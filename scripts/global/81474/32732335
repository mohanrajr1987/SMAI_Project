var resp = result;             var stream = resp.GetResponseStream();             var sr = new System.IO.StreamReader(stream);             return sr;         }          public async Task&lt;System.IO.TextReader&gt; DoRequestAsync(string url)         {             HttpWebRequest req = HttpWebRequest.CreateHttp(url);             req.AllowReadStreamBuffering = true;             var tr = await DoRequestAsync(req);             return tr;         }     }  } </code></pre>