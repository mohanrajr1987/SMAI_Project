String getMileage()     { return Mileage;}     public String getModComp()     { return ModComp;}     public String getModStage()     { return ModStage;}     public String getPerformance()     { return Perform;}     public String getPrice()     { return Price;}     public String getCusName()     { return CusName;}     public String getCusEmail()     { return CusEmail;}  } </code></pre>