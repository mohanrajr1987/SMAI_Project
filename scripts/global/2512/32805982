/ calculating years, month, days and weeks.                     int y = year - (14 - month) / 12;                     int x = y + y / 4 - y / 100 + y / 400;                     int m = month + 12 * ((14 - month) / 12) - 2;                     int d = (1 + x + (31 * m) / 12) % 7;                     // calculate leap year                     boolean LeapYear = (year % 400 == 0);                     // displaying month as String                     cal.set(year, month, 0);                         System.out                                 .print(cal.getDisplayName(Calendar.MONTH, Calendar.LONG, Locale.ENGLISH) + "\t\t\t\t\t\t");                         System.out.print("Sun Mon Tue Wed Thu Fri Sat" + "\t\t\t");                      int length = (int) (30 + ((month + (month / 8.0)) % 2));                     if (month == 2) {                         if (LeapYear) {                             length -= 1;                         } else {                             length -= 2;                         }                     }                      for (int a = 0; a &lt; col.length; a++) {                         int counter = 1;                         // spacing for first day of the month                         for (int i = 0; i &lt; d; i++) {                             System.out.print("    ");                             counter++;                         }                         // spacing for days                         for (day = 1; day &lt;= length; day++) {                             System.out.printf("%2d", day);                             System.out.print((counter++ % 7 != 0) ? "  " : "\n");                         }                     }                     week = (week + length) % 6;                 }             year++;             /* } */             System.out.print("\n\n" + "Enter another year (Y/N)? ");             ans = in.next();         } while (ans.equals("Y") || ans.equals("y"));         System.out.println("\nEnd!");         in.close();     } 