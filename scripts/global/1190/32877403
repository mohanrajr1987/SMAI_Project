ser doesn't exist: %s", err);                         res.redirect('/', { data:"failed"});                     } else {                         if (input.password == rows[0].password) {                             console.log("User password is matched");                 *** success redirect right here ****                   res.redirect('/static/taxonomer'+'.html');                          } else {                             console.log("failed here", rows[0].password);                             res.redirect( '/', { data:"failed"});                         }                     }                 });             });         }     }; })(); </code></pre>