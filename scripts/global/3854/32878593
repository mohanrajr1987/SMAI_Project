roller, didLogInUser user: PFUser) {       self.dismissViewControllerAnimated(false, completion: nil)   }     func updateInstallationForUser() {       var installation = PFInstallation.currentInstallation()       if PFUser.currentUser() != nil &amp;&amp; PFUser.currentUser()?.objectId != nil {        var id: String = PFUser.currentUser()!.objectId!       installation.setValue(PFObject(withoutDataWithClassName: "_User", objectId: PFUser.currentUser()!.objectId!), forKey: "User")       installation.saveInBackground()        }   }    override func didReceiveMemoryWarning() {       super.didReceiveMemoryWarning()       // Dispose of any resources that can be recreated.   } } </code></pre>