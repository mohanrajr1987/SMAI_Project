nav = null; navSelected = '/';  manageControllers.controller('NavCtrl', ['$scope', '$http', function($scope, $http) {     if (thisApp.nav === null) {         $http.get('php/angular.php', {params: {'function': 'nav'}}).then(function successCallback(response) {             console.log(response.data);             thisApp.nav = response.data;             $scope.nav = thisApp.nav;             $scope.select = thisApp.navSelected;         });     } else {         $scope.nav = thisApp.nav;         $scope.select = thisApp.navSelected;     } }]);  manageControllers.controller('DashCtrl', ['$scope', function($scope) {     thisApp.navSelected = '/'; }]); </code></pre>