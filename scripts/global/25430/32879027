<pre><code>class Program {     static void Main(string[] args)     {         int[,] table = new int[8,8];         for (int i = 0; i &lt; 8; i++)         {             for (int j = 0; j &lt; 8; j++)             {                 if ((i + j) % 2 == 0)                 {                     table[i,j] = 0;                 }                 else                 {                     table[i,j] = 1;                 }             }         }         for (int i = 0; i &lt; 8; i++)         {             for (int j = 0; j &lt; 8; j++)             {                 Console.WriteLine(table[i,j] + " ");             }             Console.WriteLine();          }     } } </code></pre>